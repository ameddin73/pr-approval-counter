{
  "manifest_version": 3,
  "name": "GitHub PR Approval Counter",
  "version": "1.0",
  "description": "Displays the number of PRs you've approved for a repo",
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["cookies", "tabs", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  }
}
